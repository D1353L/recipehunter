<table>
  <% @recipes.each do |recipe| %>
    <tr>
      <td>
        <%= link_to sanitize(recipe[:source_url]) do %>
          <%= image_tag sanitize(recipe[:image_url]), width: 100, height: 100 %>
        <% end %>
      </td>
      <td>
        <%= link_to sanitize(recipe[:title]), sanitize(recipe[:source_url]) %>
      </td>
      <td>
        <%= sanitize(recipe[:social_rank]) %>
      </td>
    </tr>
  <% end %>
</table>

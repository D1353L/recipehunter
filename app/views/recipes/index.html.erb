<table>
  <% @recipes.each do |recipe| %>
    <tr>
      <td>
        <%= link_to recipe['source_url'] do %>
          <%= image_tag recipe['image_url'], width: 100, height: 100 %>
        <% end %>
      </td>
      <td>
        <%= link_to sanitize(recipe['title']), recipe['source_url'] %>
      </td>
      <td>
        <%= recipe['social_rank'] %>
      </td>
    </tr>
  <% end %>
</table>
